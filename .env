# Configuration de l'application
APP_NAME=Notes API
APP_VERSION=1.0.0
DEBUG=true

# Configuration du serveur
HOST=0.0.0.0
PORT=8000

# Base de données
DATA_FILE_PATH=data/notes.json

# CORS - URLs autorisées (séparées par des virgules)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# CORS par défaut (si CORS_ORIGINS n'est pas défini)
DEFAULT_CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Messages de l'API
API_WELCOME_MESSAGE=Bienvenue sur {app_name}
API_HEALTH_STATUS=healthy
API_DOCS_PATH=/docs